<% content_for :title do %> MY TEST APPLICATION HOMEPAGE<% end %>
<% content_for :description do %> My mock sign-up page<% end %>
<section>
	<img src="http://lorempixel.com/1170/600/cats/1">
</section>
<section>
	<div class="column">
		<h2>Sign Up To Have Awesome Cat Photos Sent Weekly!</h2>
	</div>

<div class="column">
	<div class="form-centered">
		<%= simple_form_for @visitor do |f| %>
		<%= f.error_notification %>
		<%= f.input :email, label: false, :placeholder => 'Your Email Address...'%>
		<br/>
		<%= f.button :submit, "Sign Up For The Newsletter", :class => "submit" %>
		<% end %>

</div>
</div>
</section>